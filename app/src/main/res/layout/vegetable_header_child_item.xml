<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/tvNameOfVegetable"
    android:text="bla 1"
    android:layout_width="match_parent"
    android:background="@color/purpose_green"
    android:textSize="@dimen/MH1"
    android:gravity="center"
    android:textColor="@color/blue_line"
    android:layout_height="@dimen/auth_etHeight" />
   <LinearLayout
       android:layout_below="@+id/tvNameOfVegetable"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/ivAvatar"
           android:layout_width="150dp"
           android:layout_height="150dp" />
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:id="@+id/tvCost"
               android:layout_width="match_parent"
               android:layout_height="@dimen/auth_etHeight"
               />
           <TextView
               android:id="@+id/tvCalo"
               android:layout_below="@+id/tvCost"
               android:layout_width="match_parent"
               android:layout_height="@dimen/auth_etHeight"
               />
           <TextView
               android:id="@+id/tvNameOfMenu"
               android:layout_below="@+id/tvCalo"
               android:layout_width="match_parent"
               android:layout_height="@dimen/auth_etHeight"
               />
       </RelativeLayout>
   </LinearLayout>
</RelativeLayout>