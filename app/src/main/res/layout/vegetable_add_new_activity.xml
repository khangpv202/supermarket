<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:id="@+id/header"
            layout="@layout/header_activity"/>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_width="150dp" android:layout_height="150dp"
                   android:id="@+id/ivAvatar"
                   android:background="@color/gray_1"/>
        <TextView android:layout_width="match_parent" android:layout_height="150dp"
                  android:layout_toRightOf="@+id/ivAvatar"
                  android:text="TextView"
                  android:id="@+id/tvAddImage"/>
    </RelativeLayout>

    <LinearLayout
            android:layout_below="@+id/header"
            android:id="@+id/llAddNewInfoBillName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_etHeight"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                style="@style/T4"
                android:id="@+id/tvNameFirstField"
                android:text="Ten rau: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_margin_size"/>

        <TextView
                style="@style/T4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"/>

        <TextView
                style="@style/T4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>

        <EditText
                android:id="@+id/etNameOfVegetable"
                style="@style/T15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:inputType="textMultiLine"

                />
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/G1"
            android:background="@color/border_login"/>
    <!-- gia rau-->
    <LinearLayout
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_etHeight"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                style="@style/T4"
                android:id="@+id/tvPriceTitle"
                android:text="Gia rau: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_margin_size"/>

        <TextView
                style="@style/T4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"/>

        <TextView
                style="@style/T4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>

        <EditText
                android:id="@+id/etPrice"
                style="@style/T15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:inputType="textMultiLine"

                />
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/G1"
            android:background="@color/border_login"/>

    <!-- ngay nhap-->
    <!-- gia rau-->
    <LinearLayout
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_etHeight"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                style="@style/T4"
                android:id="@+id/tvDateIn"
                android:text="Ngay Nhap: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_margin_size"/>

        <TextView
                style="@style/T4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"/>

        <TextView
                style="@style/T4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>

        <EditText
                android:id="@+id/etDateIn"
                android:enabled="false"
                style="@style/T15"
                android:drawableRight="@drawable/icon_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:inputType="textMultiLine"

                />
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/G1"
            android:background="@color/border_login"/>
    <!-- nang luong-->
    <LinearLayout
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_etHeight"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                style="@style/T4"
                android:text="Nang luong: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_margin_size"/>

        <TextView
                style="@style/T4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>

        <EditText
                android:id="@+id/etCalo"
                style="@style/T15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:inputType="textMultiLine"

                />
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/G1"
            android:background="@color/border_login"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/edittext_Height">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/large_margin_size"
                  android:layout_below="@+id/etPrice"
                  style="@style/T4"
                  android:gravity="center"
                  android:layout_alignTop="@+id/tvChooseMenu"
                  android:layout_alignBottom="@+id/tvChooseMenu"
                  android:id="@+id/tvNameMenu"
                  android:text="Mon an: "/>
        <TextView
                style="@style/T4"
                android:id="@+id/tvChooseMenu"
                android:layout_marginRight="@dimen/large_margin_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/etCalo"
                android:layout_toRightOf="@+id/tvNameMenu"
                android:background="@null"
                android:drawableRight="@android:drawable/btn_dropdown"
                android:gravity="center"
                android:text="Chon mon an"/>
    </LinearLayout>

    <ScrollView
            android:layout_below="@+id/tvChooseMenu"
            android:layout_marginLeft="@dimen/large_margin_size"
            android:layout_marginRight="@dimen/large_margin_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/llNameOfMenuList"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </ScrollView>
</LinearLayout>